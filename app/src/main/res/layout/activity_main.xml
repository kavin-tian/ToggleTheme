<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custom_attr_app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/custom_id_title_layout"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:background="?attr/custom_attr_app_title_layout_bg"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/theme_user_photo"
            android:layout_width="?attr/custom_attr_user_photo_dimen"
            android:layout_height="?attr/custom_attr_user_photo_dimen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:padding="3dp"
            android:src="?attr/custom_attr_user_photo_place_holder" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:text="@string/app_name"
        android:textColor="?attr/custom_attr_nickname_text_color"
        android:textSize="26sp" />

    <Switch
        android:id="@+id/toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="夜间模式"
        android:textColor="?attr/custom_attr_nickname_text_color" />
</LinearLayout>